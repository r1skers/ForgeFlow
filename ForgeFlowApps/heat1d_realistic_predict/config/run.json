{
  "mode": "supervised",
  "task": "heat1d_realistic_predict",
  "adapter_ref": "ForgeFlowApps.heat1d_realistic_predict.adapters.heat1d_realistic_adapter:Heat1DRealisticPredictAdapter",
  "model": "linear_dynamics",
  "paths": {
    "train_csv": "ForgeFlowApps/heat1d_realistic_predict/data/processed/train.csv",
    "infer_csv": "ForgeFlowApps/heat1d_realistic_predict/data/infer/infer.csv",
    "predictions_csv": "ForgeFlowApps/heat1d_realistic_predict/output/predictions.csv",
