    {
      "name": "time_convergence",
      "command": [
        "{python}",
        "ForgeFlowApps/ink_diffusion/scripts/run_convergence_study.py"
      ],
      "report_csv": "../output/convergence_report.csv",
      "status_field": "status",
      "pass_value": "PASS"
    },
    {
      "name": "spatial_convergence",
      "command": [
        "{python}",
        "ForgeFlowApps/ink_diffusion/scripts/run_spatial_convergence_study.py"
      ],
      "report_csv": "../output/spatial_convergence_report.csv",
      "status_field": "status",
      "pass_value": "PASS"
    },
    {
      "name": "surrogate_eval",
      "command": [
        "{python}",
        "main.py",
